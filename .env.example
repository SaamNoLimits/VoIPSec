# Environment Configuration Template
# Copy this file to .env and update the values

# Database Configuration
DB_HOST=database
DB_PORT=5432
DB_NAME=voip_enterprise
DB_USER=voip_admin
DB_PASSWORD=your_secure_database_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production

# Asterisk Configuration
ASTERISK_HOST=asterisk
ASTERISK_AMI_USER=admin
ASTERISK_AMI_SECRET=your_secure_ami_password

# Application URLs
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:8080

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=voip@yourcompany.com

# Company Information
COMPANY_NAME=VoIP Enterprise
COMPANY_DOMAIN=yourcompany.com
COMPANY_EMAIL=admin@yourcompany.com

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_key
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Monitoring Configuration
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION=15d

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# SSL Configuration
SSL_CERT_PATH=./ssl/server.crt
SSL_KEY_PATH=./ssl/server.key

# Network Configuration
SIP_PORT=5060
SIP_TLS_PORT=5061
RTP_START=10000
RTP_END=10100

# Call Recording Configuration
RECORDING_ENABLED=true
RECORDING_FORMAT=wav
RECORDING_RETENTION_DAYS=90

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=voip-backups
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key

# Feature Flags
ENABLE_CALL_RECORDING=true
ENABLE_VOICEMAIL=true
ENABLE_CONFERENCES=true
ENABLE_CALL_PARKING=true
ENABLE_CALL_TRANSFER=true
ENABLE_CALL_WAITING=true
ENABLE_CALLER_ID=true
ENABLE_DO_NOT_DISTURB=true

# Development Configuration
NODE_ENV=production
DEBUG=false
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# Redis Pool Configuration
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10

# Performance Configuration
ENABLE_GZIP=true
ENABLE_CACHING=true
CACHE_TTL=3600

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false

# Integration Configuration
ENABLE_LDAP=false
LDAP_URL=ldap://ldap.company.com
LDAP_BASE_DN=dc=company,dc=com
LDAP_BIND_DN=cn=admin,dc=company,dc=com
LDAP_BIND_PASSWORD=ldap_password

# Webhook Configuration
ENABLE_WEBHOOKS=false
WEBHOOK_SECRET=your_webhook_secret
